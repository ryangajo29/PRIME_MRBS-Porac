<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/my_scrollview"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/colorPrimary">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="ADD NEW METER FORM"
                android:textColor="@color/colorBackroundWhite"
                android:textSize="20dp"
                android:gravity="center"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/cardview_bg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:text="Name :"
                android:textColor="@color/colorBlack"
                android:textSize="16dp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/ET_nm_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textColor="@color/colorGray"
                android:textSize="18dp"
                android:inputType="text"
                android:maxLines="1"
                android:imeOptions="actionNext"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:text="Meter Number :"
                android:textColor="@color/colorBlack"
                android:textSize="16dp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/ET_nm_mtrno"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textColor="@color/colorGray"
                android:textSize="18dp"
                android:inputType="text"
                android:maxLines="1"
                android:imeOptions="actionNext"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:text="Address :"
                android:textColor="@color/colorBlack"
                android:textSize="16dp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/ET_nm_address"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textColor="@color/colorGray"
                android:textSize="18dp"
                android:inputType="text"
                android:maxLines="1"
                android:imeOptions="actionNext"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:text="Current Reading :"
                android:textColor="@color/colorBlack"
                android:textSize="16dp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/ET_nm_presrdg"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textColor="@color/colorGray"
                android:textSize="18dp"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:imeOptions="actionNext" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:text="Additional Notes :"
                android:textColor="@color/colorBlack"
                android:textSize="16dp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/ET_nm_note"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textColor="@color/colorGray"
                android:textSize="18dp"
                android:inputType="text"
                android:maxLines="1"
                android:layout_marginBottom="10dp"
                android:imeOptions="actionDone" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>